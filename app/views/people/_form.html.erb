<%= form_for person do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <h2>Pet</h2>

  <%= form.fields_for :pets do |fields| %>
    <%= fields.hidden_field :id %>

    <div class="field">
      <%= fields.label :animal_type %>
      <%= fields.collection_select :animal_type, Pet::ANIMAL_TYPES, :to_s, :to_s, include_blank: true %>
    </div>

    <div class="field">
      <%= fields.label :name %>
      <%= fields.text_field :name %>
    </div>

    <div class="field">
      <%= fields.label :adopted_on %>
      <%= fields.date_field :adopted_on %>
    </div>
  <% end %>

  <h2>Drivers License</h2>

  <%= form.fields_for :drivers_license do |fields| %>
    <%= fields.hidden_field :id %>

    <div class="field">
      <%= fields.label :state %>
      <%= fields.text_field :state %>
    </div>

    <div class="field">
      <%= fields.label :drivers_license_number %>
      <%= fields.text_field :drivers_license_number %>
    </div>

    <div class="field">
      <%= fields.label :expires_on %>
      <%= fields.date_field :expires_on %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
